<Page x:Class="SIMS.SecretaryView.OrderEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.SecretaryView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MaxHeight="450"
      MaxWidth="800"
      Title="OrderEquipmentPage">

    <Grid>
        <Label Content="Naručivanje dinamičke opreme" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Margin="0,-60,0,440"/>
        <StackPanel Width="400" Orientation="Vertical" Margin="-80,35,480,34">
            <Grid Width="400" Margin="10,10" Height="70">
                <Label Content="Naziv:" FontSize="20" VerticalAlignment="Top" Height="40" Margin="145,0,185,0" />
                <TextBox Width="100" Height="20" Name="Name" VerticalAlignment="Top" Margin="150,40,150,0" />
            </Grid>
            <Grid Width="400" Height="70" HorizontalAlignment="Left" Margin="10,10" >
                <Label Content="Kolicina:" FontSize="20" HorizontalAlignment="Left" Margin="149,7,0,22"/>
                <TextBox Width="100" Height="20" x:Name="Quantity" VerticalAlignment="Top" Margin="150,40,150,0"/>
            </Grid>
            <Grid>
                <DataGrid x:Name="equipmentTable" HorizontalAlignment="Left" Height="126" VerticalAlignment="Top" Width="122" ItemsSource="{Binding Path=eq}" CanUserAddRows="False" AutoGenerateColumns="False" Margin="150,58,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Naziv" Width="*" Binding="{Binding item}"  DataGridColumn.CanUserResize="False"/>
                        <DataGridTextColumn Header="Kolicina" Width="*" Binding="{Binding quantity}"  DataGridColumn.CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="+" x:Name="add" Width="20" Height="20" Margin="305,48,75,102" Click="Add_Click"/>
                <Button Content="-" x:Name="add_Copy" Width="20" Height="20" Margin="305,77,75,73" Click="Remove_Click"/>
                <Label Content="Lista za naručivanje:" HorizontalAlignment="Left" FontSize="20" Margin="121,15,0,0" VerticalAlignment="Top"/>
            </Grid>
        </StackPanel>
        <Grid Margin="420,0,10,52">
            <Label Content="Magacin" HorizontalAlignment="Left" Margin="156,113,0,0" VerticalAlignment="Top" FontSize="20"/>
            <DataGrid x:Name="magacinTable" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="310" ItemsSource="{Binding Path=order}" CanUserAddRows="False" AutoGenerateColumns="False" Margin="44,167,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv" Width="*" Binding="{Binding item}"  DataGridColumn.CanUserResize="False"/>
                    <DataGridTextColumn Header="Kolicina" Width="*" Binding="{Binding quantity}"  DataGridColumn.CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid HorizontalAlignment="Left" Margin="160,358,0,-12">
            <Button x:Name="ordering" Content="Poruči" Width="50" Height="20" Margin="114,46,236,38" Click="Order_Click"/>
            <Button x:Name="cancel" Content="Odustani" Height="20" Margin="233,17,108,17"/>
        </Grid>
    </Grid>
</Page>
