<Page x:Class="SIMS.SecretaryView.AddAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.SecretaryView"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      MaxHeight="450"
      MaxWidth="800"
      Title="AddAppointmentPage">

    <Grid>
        <Label Content="Zakazivanje termina" FontSize="30" HorizontalAlignment="Center" Margin="0,-47,0,394"/>
        <Grid>
            <StackPanel Width="400"  Orientation="Vertical" Margin="200,2,200,-187">
                <Grid Width="400" FlowDirection="LeftToRight" HorizontalAlignment="Center">
                    <Label Content="Pacijent:" HorizontalAlignment="Left" Margin="128,7,0,30" FontSize="17" Height="33" Width="73"/>
                    <ComboBox DisplayMemberPath="FullName" x:Name="PatientBox" Margin="134,38,143,2" Height="29"/>
                </Grid>
                <Grid Width="400" FlowDirection="LeftToRight" HorizontalAlignment="Center">
                    <Label Content="Doktor:" HorizontalAlignment="Left" Margin="128,7,0,0" VerticalAlignment="Top" FontSize="17" Height="32" Width="74"/>
                    <ComboBox HorizontalAlignment="Left" DisplayMemberPath="FullName" x:Name="DoctorBox" Margin="134,38,0,0" VerticalAlignment="Top"  Width="123" Height="29"/>
                </Grid>
                <Grid Width="400"  FlowDirection="LeftToRight" HorizontalAlignment="Center">
                    <Label Content="Sala:" HorizontalAlignment="Left" Margin="130,10,0,0" VerticalAlignment="Top" FontSize="17" Height="33" Width="54"/>
                    <ComboBox HorizontalAlignment="Left" x:Name="RoomBox" Margin="134,38,0,0" DisplayMemberPath="roomNum" VerticalAlignment="Top"  Width="123" Height="29" />
                </Grid>
                <Grid Width="400"  FlowDirection="LeftToRight">
                    <Label Content="Datum:" HorizontalAlignment="Left" Margin="131,8,0,0" VerticalAlignment="Top" FontSize="17" Height="33" Width="74"/>
                    <DatePicker HorizontalAlignment="Left" x:Name="DatePicker" Margin="134,38,0,0" VerticalAlignment="Top" Width="123"/>
                </Grid>
                <Grid Width="400"  FlowDirection="LeftToRight" HorizontalAlignment="Center">
                    <Label Content="Vreme:" HorizontalAlignment="Left" Margin="132,9,0,0" VerticalAlignment="Top" FontSize="17" Height="33" Width="72"/>
                    <ComboBox HorizontalAlignment="Left" x:Name="Time" Margin="134,38,0,0" VerticalAlignment="Top"  Width="123" Height="29" />
                </Grid>
                <Grid Width="400"  FlowDirection="LeftToRight">
                    <Label Content="Trajanje:" HorizontalAlignment="Left" Margin="129,8,0,0" VerticalAlignment="Top" FontSize="17" Height="33" Width="73"/>
                    <ComboBox HorizontalAlignment="Left" x:Name="Duration" Margin="134,38,0,0" VerticalAlignment="Top"  Width="123" Height="29" />
                </Grid>
                <Grid Height="50"></Grid>
                <Grid Width="400" FlowDirection="LeftToRight">
                    <Button Style="{StaticResource RoundButtonTemplate}" Background="LightGreen" Content="Zakazi" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="40,0,0,0" Click="Schedule_Click" FontSize="16"/>
                    <Button Style="{StaticResource RoundButtonTemplate}" Background="Firebrick" Content="Zatvori"  Click="Close_Click" Margin="210,10,70,10"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
