<Page x:Class="SIMS.SecretaryView.VacationPeriodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.SecretaryView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VacationPeriodPage"
      MaxHeight="450"
      MaxWidth="800">

    <Grid>
        <Label Content="Pregled zahteva za slobodne dane" FontSize="30" HorizontalAlignment="Center" Margin="0,-60,0,440"/>
        <StackPanel>
            
            <DataGrid x:Name="vacationPeriodTable" ItemsSource="{Binding list}" Margin="20,20" IsReadOnly="True" MaxHeight="200" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Doktor" Width="*" Binding="{Binding doctor.FullName}" CanUserResize="False"/>
                    <DataGridTextColumn Header="Vreme pocetka" Width="*" Binding="{Binding StartTime}"  CanUserResize="False"/>
                    <DataGridTextColumn Header="Vreme zavrsetka" Width="*" Binding="{Binding EndTime}"  CanUserResize="False"/>
                    <DataGridTextColumn x:Name="status" Header="Status" Width="*" Binding="{Binding VacationPeriodStatusTypeString}" CanUserResize="False"/>
                    <DataGridTextColumn Header="Tip" Width="*" Binding="{Binding VacationPeriodTypeString}" CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Grid>
            <StackPanel Orientation="Horizontal" Margin="0,297,0,80">
                <Button Background="LightGreen" Content="Detalji" Margin="10,10" VerticalAlignment="Center" Width="100" Height="38" Click="Details_Click"/>
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
