            <Button x:Name="order"  Click="order_Click" Content="Naruči opremu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Height="40" Margin="560,0,0,0"/>
        </Grid>
        <Grid Height="50" Width="800" Margin="0,360,0,40">
            <Button Content="Zahtev za odmor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Height="40" RenderTransformOrigin="-0.438,-0.125" Margin="248,-7,0,0"/>
            <Button Content="Hitan slucaj" Background="Firebrick"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="475,-7,0,0"/>
        </Grid>
        <Image Width="90" Height="80" Margin="160,58,550,312" Source="/images/register.png" Stretch="Fill"/>
        <Image Width="90" Height="80" Margin="354,58,356,312" Source="/images/PngItem_2005182.png" Stretch="Fill"/>
        <Image Width="90" Height="80" Margin="565,58,145,312" Source="/images/NicePng_order-icon-png_2992961.png" Stretch="Fill"/>
        <Image Width="90" Height="80" Margin="253,259,457,111" Source="/images/NicePng_note-png_4357930.png" Stretch="Fill"/>
        <Image Width="90" Height="80" Margin="471,252,239,118" Source="/images/pngegg.png" Stretch="Fill"/>


    </Grid>
</Page>
