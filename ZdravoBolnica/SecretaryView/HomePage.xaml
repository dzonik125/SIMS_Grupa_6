<Page x:Class="SIMS.SecretaryView.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS.SecretaryView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Height="450" Width="800">
        <Grid Width="800" Margin="0,153,0,238">
            <Button  x:Name="registration" Content="Registracija" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Height="40" Margin="161,0,0,0" Click="Registration_Click"/>
