<Window x:Class="SIMS.DoctorView.RecordExamination"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS.DoctorView"
        mc:Ignorable="d"
        Title="Record Examination" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Pacijent:" Margin="10,12,11,11" FontSize="15"/>
            <Label Content="Glavne Tegobe:" Margin="10,0,7,70" FontSize="15" Grid.Row="1"/>
            <Label Grid.Row="2" Content="Dijagnoza:" Margin="10,3,7,65" FontSize="15"/>
            <Label Grid.Row="3" Content="Anamneza:" Margin="10,3,7,65" FontSize="15"/>
            <Button Grid.Row="4" Content="Evidentiraj" Margin="10,65,0,30"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Petar Petrovic" FontSize="15" Margin="5,12,78,12"/>
            <TextBox Grid.Row="1" Margin="11,10,26,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <TextBox Grid.Row="2" Margin="11,10,26,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <TextBox Grid.Row="3" Margin="11,10,26,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <Button Grid.Row="4" Content="Izadji" Margin="122,65,14,30"/>
        </Grid>
    </Grid>
</Window>
