<Window x:Class="SIMS.DoctorView.ExaminationDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS.DoctorView"
        mc:Ignorable="d"
        Title="ExaminationDetails" Height="550" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Pacijent:" Margin="21,12,11,11" FontSize="15"/>
            <Label Content="Glavne Tegobe:" Margin="21,0,7,70" FontSize="15" Grid.Row="1"/>
            <Label Grid.Row="2" Content="Dijagnoza:" Margin="21,3,7,65" FontSize="15"/>
            <Label Grid.Row="3" Content="Anamneza:" Margin="21,3,7,65" FontSize="15"/>
            <Label Grid.Row="4" Content="Plan lecenja:" Margin="21,3,7,35" FontSize="15"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Petar Petrovic" FontSize="15" Margin="5,12,78,12"/>
            <TextBox Grid.Row="1" Margin="11,10,26,0" Name ="MainProblems" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <TextBox Grid.Row="2" Margin="11,10,26,0" Name="Diagnosis" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <TextBox Grid.Row="3" Margin="11,10,26,0" Name="Anamnesis" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <TextBox Grid.Row="4" Margin="11,10,26,0" Name="Therapy" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <Button Grid.Row="5" Content="Izadji" Margin="120,33,19,24" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
