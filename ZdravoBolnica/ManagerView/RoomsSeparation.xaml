        <Label Grid.Row="2" Content="Nova namena prve prostorije:" Margin="0,70,10,80" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <ComboBox Name="newPurposeRoom1" Grid.Row="2" Grid.Column="1" Margin="74,68,5,97" Grid.ColumnSpan="2" Grid.RowSpan="2"  />
        <Label Grid.Row="3" Content="Nova namena druge prostorije:" Margin="0,48,10,2" Grid.ColumnSpan="2"/>
