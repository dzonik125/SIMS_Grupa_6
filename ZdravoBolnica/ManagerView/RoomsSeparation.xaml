        xmlns:local="clr-namespace:SIMS.ManagerView"
        mc:Ignorable="d"
        Title="SeparateRooms" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Broj sobe 1:" Margin="53,47,71,3" Grid.ColumnSpan="2"/>
        <TextBox Name="roomNum1" Grid.Row="0" Grid.Column="1" Margin="75,44,4,21" Grid.ColumnSpan="2"></TextBox>
        <Label Grid.Row="1" Content="Broj sobe 2:" Margin="53,23,71,27" Grid.ColumnSpan="2"/>
        <TextBox Name="roomNum2" Grid.Row="1" Grid.Column="1" Margin="75,19,4,46" Grid.ColumnSpan="2"/>
