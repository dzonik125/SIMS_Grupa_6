        <Label Grid.Row="2" Content="Datum pocetka:" Margin="45,59,38,91" Grid.ColumnSpan="2"  Grid.Column="3" Grid.RowSpan="2"/>
        <DatePicker Name="endDate" Grid.Row="2" Grid.Column="4" Margin="74,57,26,6" Grid.ColumnSpan="2"></DatePicker>
        <Button Name="ConfirmSeparationRooms" Grid.Column="3" Grid.Row="3" Width="100" Height="40" Content="Potrvdi" Margin="70,59,30,1" Grid.ColumnSpan="2" Click="ConfirmSeparationRooms_Click"></Button>
        <Button Name="DiscardSeparationRooms" Grid.Column="4" Grid.Row="3" Width="100" Height="40" Content="Odustani" Margin="89,59,11,1" Click="DiscardSeparationRooms_Click" Grid.ColumnSpan="2"/>


